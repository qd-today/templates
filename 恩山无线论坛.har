[
    {
        "comment": "每日登录",
        "request": {
            "method": "GET",
            "url": "https://www.right.com.cn/forum/forum.php",
            "headers": [
                {
                    "name": "Cookie",
                    "value": "{{cookie}}"
                }
            ],
            "cookies": []
        },
        "rule": {
            "success_asserts": [
                {
                    "re": "200",
                    "from": "status"
                }
            ],
            "failed_asserts": [],
            "extract_variables": [
                {
                    "name": "formhash",
                    "re": "name=\"formhash\"\\s+value=\"([^\"]+)\"",
                    "from": "content"
                },
                {
                    "name": "uid",
                    "re": "space-uid-(\\d+)",
                    "from": "content"
                }
            ]
        }
    },
    {
        "request": {
            "method": "POST",
            "url": "https://www.right.com.cn/forum/plugin.php?id=erling_qd%3Aaction&action=sign",
            "headers": [
                {
                    "name": "Cookie",
                    "value": "{{cookie}}"
                }
            ],
            "cookies": [],
            "data": "formhash={{formhash}}"
        },
        "rule": {
            "success_asserts": [
                {
                    "re": "200",
                    "from": "status"
                }
            ],
            "failed_asserts": [],
            "extract_variables": []
        }
    },
    {
        "comment": "",
        "request": {
            "method": "GET",
            "url": "https://www.right.com.cn/forum/home.php?mod=space&uid={{uid|urlencode}}&do=profile&mycenter=1",
            "headers": [
                {
                    "name": "Cookie",
                    "value": "{{cookie}}"
                }
            ],
            "cookies": []
        },
        "rule": {
            "success_asserts": [
                {
                    "re": "200",
                    "from": "status"
                }
            ],
            "failed_asserts": [],
            "extract_variables": [
                {
                    "name": "esb",
                    "re": "恩山币<\\/em>\\s*(\\d+)",
                    "from": "content"
                },
                {
                    "name": "user",
                    "re": "<h2[^>]*>\\s*([^<]+)",
                    "from": "content"
                },
                {
                    "name": "gid",
                    "re": "用户组[^>]*>.*?<a[^>]*>([^<]+)</a>",
                    "from": "content"
                }
            ]
        }
    },
    {
        "comment": "Unicode转换",
        "request": {
            "method": "POST",
            "url": "api://util/unicode",
            "headers": [],
            "cookies": [],
            "data": "content=用户名：{{user}}，uid：{{uid}}，用户组：{{gid}}，恩山币：{{esb}}"
        },
        "rule": {
            "success_asserts": [
                {
                    "re": "200",
                    "from": "status"
                },
                {
                    "re": "\"状态\": \"200\"",
                    "from": "content"
                }
            ],
            "failed_asserts": [],
            "extract_variables": [
                {
                    "name": "__log__",
                    "re": "\"转换后\": \"(.*)\"",
                    "from": "content"
                }
            ]
        }
    }
]